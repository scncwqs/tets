#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/ql/scripts/node_modules/.pnpm/http-server@0.12.3/node_modules/http-server/bin/node_modules:/ql/scripts/node_modules/.pnpm/http-server@0.12.3/node_modules/http-server/node_modules:/ql/scripts/node_modules/.pnpm/http-server@0.12.3/node_modules:/ql/scripts/node_modules/.pnpm/node_modules:/ql/scripts/node_modules:/ql/node_modules:/node_modules:/ql/scripts/node_modules/http-server/bin/node_modules:/ql/scripts/node_modules/http-server/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../http-server/bin/http-server" "$@"
else
  exec node  "$basedir/../http-server/bin/http-server" "$@"
fi
